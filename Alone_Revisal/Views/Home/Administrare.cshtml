
@{ 
    ViewData["Title"] = "Administrare";
}

<div class="mdl-grid">
    <div class="mdl-cell mdl-cell--4-col">
        <div class="demo-card-square mdl-card mdl-shadow--2dp">
            <div class="mdl-card__title mdl-card--expand" id="angajat">
                <h2 class="mdl-card__title-text homeLabel">Angajati activi</h2>
            </div>
            <div class="mdl-card__actions mdl-card--border">
                <a class="mdl-button mdl-button--colored" asp-controller="Home" asp-action="AngajatiActivi">
                    Afiseaza clienti
                </a>
            </div>
        </div>
    </div>

    <div class="mdl-cell mdl-cell--4-col">
        <div class="demo-card-square mdl-card mdl-shadow--2dp">
            <div class="mdl-card__title mdl-card--expand" id="database">
                <h2 class="mdl-card__title-text homeLabel">Incarca baza Revisal</h2>
            </div>
            <div class="mdl-card__actions mdl-card--border">
                <a class="mdl-button mdl-button--colored" asp-controller="Home" asp-action="UploadRevisalDatabase">
                    Incarca baza
                </a>
            </div>
        </div>
    </div>

    <div class="mdl-cell mdl-cell--4-col">
        <div class="demo-card-square mdl-card mdl-shadow--2dp">
            <div class="mdl-card__title mdl-card--expand" id="roles">
                <h2 class="mdl-card__title-text homeLabel">Roluri</h2>
            </div>
            <div class="mdl-card__actions mdl-card--border">
                <a class="mdl-button mdl-button--colored" asp-controller="Role" asp-action="Index">
                    Roluri
                </a>
            </div>
        </div>
    </div>
    <div class="mdl-cell mdl-cell--4-col">
        <div class="demo-card-square mdl-card mdl-shadow--2dp">
            <div class="mdl-card__title mdl-card--expand" id="users">
                <h2 class="mdl-card__title-text homeLabel">Useri</h2>
            </div>
            <div class="mdl-card__actions mdl-card--border">
                <a class="mdl-button mdl-button--colored" asp-controller="User" asp-action="Index">
                    Useri
                </a>
            </div>
        </div>
    </div>
</div>