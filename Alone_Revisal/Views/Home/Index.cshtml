@model Alone_Revisal.ViewModels.LoginViewModel

@{
    ViewData["Title"] = "Home Page";
}

<div class="mdl-grid">

    <div class="mdl-cell mdl-cell--4-col">
        <div class="demo-card-square mdl-card mdl-shadow--2dp">
            <div class="mdl-card__title mdl-card--expand" id="database">
                <h2 class="mdl-card__title-text homeLabel">Zona Administrare</h2>
            </div>
            <div class="mdl-card__actions mdl-card--border">
                <a class="mdl-button mdl-button--colored" asp-controller="Home" asp-action="Administrare">
                    Incarca baza
                </a>
            </div>
        </div>
    </div>

    <div class="mdl-cell mdl-cell--4-col">
        <div class="demo-card-square mdl-card mdl-shadow--2dp">
            <div class="mdl-card__title mdl-card--expand" id="detalii">
                <h2 class="mdl-card__title-text homeLabel">Pontaj</h2>
            </div>
            <div class="mdl-card__actions mdl-card--border">
                <a class="mdl-button mdl-button--colored" asp-controller="Home" asp-action="Pontaj">
                    Afiseaza informatii pontaj
                </a>
            </div>
        </div>
    </div>
</div>

